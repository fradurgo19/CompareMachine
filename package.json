{
  "name": "compare-machine-unified",
  "version": "1.0.0",
  "description": "CompareMachine - Frontend y Backend unificados",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend-unified && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend-unified && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend-unified && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
